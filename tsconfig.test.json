{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "vitest/importMeta", "node"],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@adapter/*": ["./src/adapter/*"],
      "@utils/*": ["./src/utils/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@test-helper/*": ["./tests/helper/*"],
      "@test-utils/*": ["./tests/utils/*"]
    }
  },
  "include": ["src", "tests", "tests/vitest.setup.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
